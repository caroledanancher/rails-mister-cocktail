<h1><%= @cocktail.name%> recipe</h1>

<h3>List of ingredients</h3>
<ul>
<% @cocktail.ingredients.each do |ingredient| %>
  <li><%= ingredient.name %></li>
<% end %>
</ul>

<h3>Suggestion of dosages</h3>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= @cocktail.name %> needs <%= dose.description %> of <%= dose.ingredient.name %></li>
  <li><%= link_to "Delete", cocktail_dose_path(@cocktail, dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
<% end %>
</ul>

<p><%= link_to "Add a dosage !", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Back", cocktails_path %></p>
